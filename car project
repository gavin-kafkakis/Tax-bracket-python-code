valueCar = float(input("What is the value of the car: "))
year = 0
while valueCar > 2000: 
    year += 1 
    if year == 7: 
        continue 
    if year == 1: 
        valueCar = valueCar * (1 + 0.2)
    elif year == (2,6):
        valueCar = valueCar * (1 + 0.15)
    elif year == (6,11):
        valueCar = valueCar * (1 + .1)
    else: 
        valueCar = valueCar * (1 + 0.25)


print("Number of years: ", "%d" % (year))
print("Car value: ", "%.2f" % (valueCar))
